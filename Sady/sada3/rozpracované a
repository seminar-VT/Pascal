program projecta;

var
   f: file of integer;


   cislo1,i,cislo2,poradi,prumer,soucet,nej,vyskyt:integer;
   c:text;

begin
soucet := 0;
vyskyt:= 1;
//writeln('',nej);

nej := 0;
  Assign(c,'cisla1.txt');
  Reset(c);
  while not eof(c) do begin
    readln(c,cislo1);
    if cislo1>nej then
    nej:= cislo1 ;
    writeln(cislo1);

   soucet := soucet + cislo1;

    if cislo1 = nej then
   vyskyt:= vyskyt + 1;
   end;
  while not eof(c) do begin
    readln(c,cislo1);
    writeln(cislo1);

  end;
  Close(c);
  prumer:= soucet div 1000000;

  writeln('Soucet je: ',soucet);
   writeln('nejvetsi je ',nej);
     writeln('a je tady ',vyskyt);
    writeln('prumer je ',prumer);
  readln();

end.           
