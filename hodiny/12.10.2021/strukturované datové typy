program project1;

var
i: integer;
polecisel: array [1 .. 100] of string;

begin

    for i:= 1 to 100 do
    polecisel[i] := 'A';

    for i:= 1 to 100 do
    write(polecisel[i], ' ');

    Readln();

end.
///////////array maximum -     polecisel: array [1 .. 99999999] of string; ///////
