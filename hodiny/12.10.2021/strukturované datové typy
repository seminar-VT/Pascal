program project1;


type
  tStudent = record
          Jmeno: string;
          Prijmeni:string;
          Roknarozeni:integer;
          ZaplatilISIC:boolean;

      end;

var
  slovo:string;
  student:tStudent;
  polestudentu: array [1 .. 99999999] of tStudent;


begin
 Student.Jmeno := 'Karel';
 Student.Prijmeni := 'zeleny';
 Student.Roknarozeni := 2002;
 Student.ZaplatilISIC:= false;

   writeln(Student.Jmeno,' ', Student.Prijmeni,' ',Student.Roknarozeni,' ',Student.ZaplatilISIC );

  readln;
end.
    
         
