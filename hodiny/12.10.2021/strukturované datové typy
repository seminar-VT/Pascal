program project1;

var
i: integer;
slovo:string;
polecisel: array [1 .. 100] of integer;

begin
  slovo:= 'nejaka stringova hodnota';

   Writeln(slovo);
   Writeln(slovo[5]);
  Readln;

  polecisel[7]:= 8;
  Writeln(polecisel[7]);
  Readln;


  writeln(polecisel[10]);

    for i:= 1 to Length(polecisel) do
    polecisel[i]:= 0;


  Readln();

end.


