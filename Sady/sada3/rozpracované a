program uloha3_a;

var
   f: file of integer;


   cislo1,i,cislo2,pocet,prumer,soucet,nej,vyskyt:integer;
   c:text;

begin
vyskyt:= 1;


nej := 0;

  Assign(c,'cisla1.txt');
  Reset(c);                    //cisel je 3636
  while not eof(c) do begin

    readln(c,cislo1);
    pocet:= pocet+1;
    soucet := soucet + cislo1;

    if cislo1>nej then
    nej:= cislo1 ;
    vyskyt:= 1;
   // writeln(cislo1);


    if cislo1 = nej then
   vyskyt:= vyskyt + 1;
   end;
  while not eof(c) do begin
    readln(c,cislo1);
    writeln(cislo1);

  end;
  Close(c);
  prumer:= soucet div pocet;

  writeln('Mame zde:',pocet,' cisel');
  writeln('Soucet je: ',soucet);
  writeln('nejvetsi je ',nej);
  writeln('a je tady ',vyskyt);
  writeln('prumer je ',prumer);
  readln();

end.      
